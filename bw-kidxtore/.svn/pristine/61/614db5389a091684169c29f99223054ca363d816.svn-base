.woocommerce table.compare-list td img{
	margin: 0;
    padding: 0;
    border: 0;
}
.woocommerce table.compare-list tr.title td{
	text-transform: capitalize;
	padding: 0;
}
.product-desc{
	line-height: 24px;
}
.product-desc ul li{
    list-style: none;
}