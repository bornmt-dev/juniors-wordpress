    color: #111;
    text-transform: uppercase;
    font-size: 14px;
    font-weight: 500;
    color: var(--bzo-main-color);
    transition: .25s;
    position: relative;
}
.item-list-post-style3 .readmore-wrap a:after{
    position: absolute;
